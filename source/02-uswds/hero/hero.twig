{% set classes = [
  'usa-hero',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

<section {{ add_attributes({ 'class': classes }) }}{% if background_image %} style="background-image:url({{ background_image }});"{% endif %}>
  <div class="grid-container">
    <div class="usa-hero__callout">
      <h1 class="usa-hero__heading">
        {% if callout %}
          <span class="usa-hero__heading--alt">{{ callout }}</span>
        {% endif %}
        {{ title }}
      </h1>
      {% if paragraph %}
        <p>{{ paragraph }}</p>
      {% endif %}
      {% if button_text and button_url %}
        <a class="usa-button" href="{{ button_url }}">{{ button_text }}</a>
      {% endif %}
    </div>
  </div>
</section>
