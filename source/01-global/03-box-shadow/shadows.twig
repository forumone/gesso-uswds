<div class="gesso-storybook-box-shadow">
  {% for elevation, box_shadow in gesso['box-shadow'] %}
    {% if box_shadow is iterable %}
      {% set elevation_label = box_shadow['sass'] %}
      {% set box_style = 'box-shadow: ' ~ (box_shadow['fallback'] is empty ? box_shadow['sass'] : box_shadow['fallback']) ~ ';' %}
    {% else %}
      {% set box_style = 'box-shadow: '~ box_shadow ~';' %}
    {% endif %}
    <div class="gesso-storybook-box-shadow__item" style="{{box_style}}">
      <div class="gesso-storybook-box-shadow__label">
        Elevation Level
        {{elevation}}
        {% if elevation_label %}<br>(<code>{{ elevation_label }}</code>){% endif %}
      </div>
    </div>
  {% endfor %}
</div>
