{% set classes = [
  'usa-tooltip',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

<{{ element ?: 'span' }} {{ add_attributes({ 'class': classes }) }} title="{{ tooltip_text }}"{% if tooltip_position %} data-position="{{ tooltip_position }}"{% endif %}{% if element == 'a' and url %} href="{{ url }}"{% endif %}>{{ text }}</{{ element ?: 'span' }}>
